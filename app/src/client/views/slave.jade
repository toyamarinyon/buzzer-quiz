.container.home
  header.service-title
    h1
      img(src="/assets/images/home-assets/logo.png")
    .row
      .col-md-2.col-md-offset-5
        .row.bg-primary.
          slave mode

  section.slave-list
    .row
      .col-md-6.col-md-offset-3
        .panel.panel-default
          .panel-body
            h3 Enter Master Code
            form.form-horizontal(ng-submit="submit()")
              .form-group
                label.col-sm-4.control-label Master Code
                .col-sm-8
                  input.form-control(type="text", placeholder="MasterCode", ng-model="masterCode")
              .form-group
                .col-sm-offset-2.col-sm-8
                  button.btn.btn-info.btn-lg(type="submit") connect
